{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "react",
    "import",
    "react-hooks",
    "@typescript-eslint"
  ],
  "extends": ["airbnb", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "indent": ["error", 2, { "ignoredNodes": ["JSXElement"], "SwitchCase": 1 }],
    "padded-blocks": [2, { "classes": "always", "switches": "never", "blocks": "never" }],
    "no-console": [1, { "allow": ["warn", "disableYellowBox"] }],
    "no-extra-parens": ["error", "all", { "conditionalAssign": false, "enforceForArrowConditionals": false, "ignoreJSX": "multi-line" }],
    "quote-props": ["error", "as-needed", { "numbers": true }],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 0 }],
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": true }],
    "no-underscore-dangle": 0,
    "no-throw-literal": "error",
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "curly": [2, "all"],
    "max-len": ["error", 180, 2, {
      "ignoreUrls": true,
      "ignoreComments": false,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true
    }],
    "jsx-a11y/href-no-hash": [0],
    "import/no-named-default": 0,
    "class-methods-use-this": 0,
    "arrow-parens": 0,
    "eol-last": ["error", "always"],
    "prefer-promise-reject-errors": 0,
    "linebreak-style": [0, "unix"],
    "generator-star-spacing": 0,
    "require-yield": 0,
    "id-length": 0,
    "no-plusplus": 0,
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "space-before-blocks": ["error", "always"],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "import/extensions": 2,
    "import/prefer-default-export": 0,
    "object-curly-newline": 0,
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "computed-property-spacing": ["error", "never"],
    "react/forbid-prop-types": 0,
    "react/jsx-boolean-value": 1,
    "react/jsx-closing-bracket-location": 1,
    "react/jsx-tag-spacing": [1, {"beforeSelfClosing": "always", "closingSlash": "never", "afterOpening": "never"}],
    "react/jsx-curly-spacing": 1,
    "react/jsx-first-prop-new-line": 0,
    "react/jsx-indent-props": ["error", "first"],
    "react/jsx-indent": [1, 2],
    "react/jsx-key": 1,
    "react/jsx-max-props-per-line": [1, { "maximum": 1, "when": "multiline" }],
    "react/jsx-no-duplicate-props": ["error", {"ignoreCase": false}],
    "react/jsx-no-undef": 1,
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-sort-props": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 1,
    "react/no-did-mount-set-state": 0,
    "react/no-did-update-set-state": 0,
    "react/no-direct-mutation-state": 1,
    "react/no-multi-comp": 0,
    "react/no-set-state": 0,
    "react/no-unknown-property": 1,
    "react/prefer-stateless-function": 1,
    "react/prefer-es6-class": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "no-return-await": 0,
    "vars-on-top": 0,
    "func-names": 0,
    "arrow-body-style": 0,
    "prefer-template": 0,
    "no-return-assign": 0,
    "no-unused-expressions": 0,
    "new-cap": 0,
    "global-require": 0,
    "react/require-default-props": 0,
    "semi": ["error", "always"],
    "no-trailing-spaces": "error",
    "object-shorthand": ["error", "properties"],
    "quotes": ["error", "single"],
    "import/no-named-as-default": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "react/destructuring-assignment": 0,
    "react/no-string-refs": 0,
    "jsx-a11y/media-has-caption": 0,
    "react/jsx-wrap-multilines": "off",
    "operator-linebreak": "off",
    "import/order": ["error", {"newlines-between": "always"}],
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "no-undef": "off",
    "implicit-arrow-linebreak": "off",
    "no-extra-boolean-cast": "off",
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "import/no-duplicates": "off",
    "react/no-access-state-in-setstate": "off",
    "react-hooks/rules-of-hooks": "error",
    "@typescript-eslint/indent": 0,
    "import/no-unresolved": "off",
    "@typescript-eslint/no-use-before-define": "off",
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["!**/*.test.js"]}]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
